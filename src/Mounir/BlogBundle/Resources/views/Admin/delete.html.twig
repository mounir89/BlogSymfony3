
{% extends "MounirBlogBundle::layoutAdmin.html.twig" %}

{% block title %}
  Supprimer un article - {{ parent() }}
{% endblock %}

{% block admin_body %}

  <h3 style="text-align : center">Supprimer un article</h3>
  <p style="text-align : center">
    Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?
  </p>
  {# On met l'id de l'article dans la route de l'action du formulaire #}

  <form action="{{ path('Mounir_blog_delete', {'slug': article.slug}) }}" method="post" class="text-center">

    <a href="{{ path('Mounir_blog_admin')}}" class="btn  btn-success">
      <i class="icon-chevron-left"></i>
      Annuler
    </a>

    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}

  </form>
  <br>
{% endblock %}
